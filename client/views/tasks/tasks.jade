h3 BLOG
  .row
    .col-xs-3
      form
        .form-group
          input.form-control(type='text', placeholder='title')
  .row
    .col-xs-6
      form
        .form-group
          
          textarea.form-control(placeholder='blog entry')
  
  .row
    .col-xs-12
      button.btn.btn-info(ng-hide='task.$id', ng-click='addTask(task)') Post Blog
      button.btn.btn-warning(ng-show='task.$id', ng-click='saveEdit(task)') Save Task
  
  
  
  
  
  
  
  
  
      
      
  
